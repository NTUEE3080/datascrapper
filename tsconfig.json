{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true
  },
  "exclude": [
    "node_modules"
  ]
}